<% if flash[:notice] %>
  <%= js add_gritter(flash[:notice], title: "Notification", sticky: false) %>
<% elsif flash[:error] %>
  <%= js add_gritter(flash[:error], title: "Error", sticky: false) %>
<% elsif flash[:alert] %>
  <%= js add_gritter(flash[:alert], title: "Alert", sticky: false) %>
<% end %>
