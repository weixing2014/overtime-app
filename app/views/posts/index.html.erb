<h1>Posts</h1>

<table class="table">
  <thead>
  <tr>
    <th>#</th>
    <th>Rationale</th>
    <th>User</th>
    <th>Created At</th>
  </tr>
  </thead>
  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.id %></td>
        <td><%= truncate(post.rationale) %></td>
        <td><%= post.user.first_name %></td>
        <td><%= post.created_at %></td>
      </tr>
    <% end %>
  </tbody>
</table>
